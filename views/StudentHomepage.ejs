<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Student</title>
  <link rel="icon" class="icon" href="../public/TECH (2).png" type="image/png">

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
    rel="stylesheet">
  <script src="https://kit.fontawesome.com/a81368914c.js"></script>
  <link rel="stylesheet" href="/public/AdminHomepage.css">
  <link rel="stylesheet" href="/public/Inbox.css">
  <link rel="stylesheet" href="/public/searchBar.css">
  <link rel="stylesheet" href="/public/styles/student.css" /> 
  <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

</head>

<body>
  <div class="container">
    <div class="top-bar">
      <button class="button" onclick="openInboxPage()"><img src="./public/mail-inbox-app.png" alt="Icon"><a
          href="#">Inbox</a></button>
      <div class="search-box">
        <img class="search-img" src="./public/search-interface-symbol.png" alt="Search Icon">
        <input type="text" placeholder="Search...">
      </div>
      <button class="sign-out-button"><img src="./public/profile-user.png" alt="Sign Out Icon"> <span>Sign
          Out</span></button>
    </div>
    <div class="middle-box">
  
          <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000">
  
            <div class="carousel-inner">
              <% newsletters.forEach((newsletter, index)=> { %>
                <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                  <a href="/StudentHomepage/event-details/<%= newsletter._id %>">
                    <!-- Updated link -->
                    <img class="d-block poster" src="<%= newsletter.banner %>" alt="<%= newsletter.title %>" />
                    <div class="carousel-caption d-none d-md-block">
                      <h4>
                        <%= newsletter.title %>
                      </h4>
                    </div>
                  </a>
                </div>
                <% }) %>
            </div>
  
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
              data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
              data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          
      </div>
      <div class="padding">
        <h1>Available Technologies!</h1>
      <div class="Tech">
        <ul class="machine-list">
          <% machines.forEach(machine=> { %>
            <li class="machine-item">
              <a href="/machine/<%= machine._id %>" class="machine-link">
                <img src="<%= machine.imageUrl %>" alt="<%= machine.machineName %>" class="thumbnail-image">
                <p class="machine-name">
                  <%= machine.machineName %>
                </p>
              </a>
            </li>
            <% }) %>
        </ul>
      </div>
      </div>
      
    </div>

    <div class="curved-box">
      <img src="/public/TECH (2).png" alt="Logo">
      <nav>
        <ul>
          <li><a href="#"><img src="/public/home (5).png" alt="Home"> <span>Home</span></a></li>
          <li><a href="/studentBooking"><img src="/public/Slot Booking.png" alt="MachineSlotBooking"> <span>Machine Slot Booking</span></a></li>
          <li><a href="/dailySchedule"><img src="/public/Schedule.png" alt="Todays Schedule"> <span>Todays Schedule</span></a></li>
          <li><a href="/LabRequest"><img src="/public/Lab Engagement.png" alt="labEngagement"> <span>Lab Engagement</span></a></li>
          <li><a href="/view-requests"><img src="/public/LabRequests.png" alt="ViewLabRequests"> <span>View Requests</span></a></li>
          <li><a href="/UserAboutUs"><img src="/public/info-button.png" alt="About"> <span>About</span></a></li>
          <li><a href="/UserHelp"><img src="/public/help_11433340.png" alt="Help"> <span>Help</span></a></li>
          <li><a href="/StudentProfile"><img src="/public/profile-user.png" alt="Profile"> <span>Profile</span></a>
          </li>
        </ul>
      </nav>
      <div class="bottom-box">
        <img src="./public/Mind map-pana.png" alt="Bottom Image">
      </div>
    </div>
  </div>

  <!-- Inbox container -->
  <div class="inbox-container" id="inboxContainer">
    <button class="Close-Button" id="closeButton">&#10006;</button>
    <form action="/send-message" method="POST" class="Contact-Left">
      <div class="Contact-Left-Title">
        <h2>Get in Touch</h2>
        <hr>
      </div>
      <input type="hidden" name="source" value="new">
      <input type="text" id="name" name="name" placeholder="Your Name" class="Contact-Inputs" required>
      <input type="email" id="email" name="email" placeholder="Your Email" class="Contact-Inputs" required>
      <textarea id="message" name="message" placeholder="Your Message" class="Contact-Inputs" required></textarea>
      <button type="submit">Submit</button>
    </form>
  </div>

  <!-- Overlay -->
  <div class="overlay" id="overlay"></div>


  <script>
    function openInboxPage() {
      var inboxContainer = document.getElementById('inboxContainer');
      var overlay = document.getElementById('overlay');
      inboxContainer.style.display = 'block';
      overlay.style.display = 'block';
    }

    document.addEventListener("DOMContentLoaded", function () {
      var closeButton = document.getElementById("closeButton");
      var inboxContainer = document.getElementById("inboxContainer");
      var overlay = document.getElementById("overlay");

      closeButton.addEventListener("click", function () {
        inboxContainer.style.display = "none";
        overlay.style.display = "none";
      });
    });
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>