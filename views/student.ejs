<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Student Dashboard</title>
    <link rel="stylesheet" href="/public/styles/student.css" /> 
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <h1 style="text-align: center">Upcoming Lab Events</h1>

    <div
      id="carouselExampleControls"
      class="carousel slide"
      data-bs-ride="carousel"
      data-bs-interval="3000"
    >

      <div class="carousel-inner">
        <% newsletters.forEach((newsletter, index) => { %>
        <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
          <a href="/student/event-details/<%= newsletter._id %>">
            <!-- Updated link -->
            <img
              class="d-block poster"
              src="<%= newsletter.poster %>"
              alt="<%= newsletter.title %>"
            />
            <div class="carousel-caption d-none d-md-block">
              <h5><%= newsletter.title %></h5>
            </div>
          </a>
        </div>
        <% }) %>
      </div>

      <button
        class="carousel-control-prev"
        type="button"
        data-bs-target="#carouselExampleControls"
        data-bs-slide="prev"
      >
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button
        class="carousel-control-next"
        type="button"
        data-bs-target="#carouselExampleControls"
        data-bs-slide="next"
      >
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
